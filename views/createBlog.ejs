<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Create</title>
      <style>
         * {
            font-family: system-ui, -apple-system, BlinkMacSystemFont,
               "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
               "Helvetica Neue", sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
         }
         ::placeholder {
            color: #fff;
         }
         body {
            width: 100%;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #161616;
            flex-direction: column;
            gap: 10px;
         }
         form {
            background: #333333;
            padding: 20px;
            margin: 50px 0;
            display: flex;
            flex-direction: column;
            gap: 10px 0;
            width: 60%;
            box-shadow: 0 4px 20px 5px rgba(0, 0, 0, 0.411);
            color: #fff;
            border-radius: 20px;
         }
         input,
         textarea {
            padding: 13px 10px;
            background: #ffffff27;
            border: none;
            outline: none;
            border-radius: 10px;
            color: #fff;
         }
         button {
            padding: 10px 0;
         }
         textarea {
            height: 300px;
         }
         h1 {
            text-align: center;
            margin: 10px 0;
         }
         @media only screen and (max-width: 550px) {
            form {
               width: 97%;
               padding: 20px 10px;
            }
         }
      </style>
   </head>
   <body>
      <button class="imgImport">img Import</button>
      <button class="h2Import">h2 Import</button>
      <button class="pImport">p Import</button>
      <form
         action="/admain/createBlog"
         method="post"
         enctype="multipart/form-data"
      >
         <h1>Create A Blog</h1>

         <input
            type="text"
            name="title"
            id="title"
            placeholder="Blog Title"
            required="required"
         />
         <input
            type="text"
            name="blogCaption"
            id="blogCaption"
            placeholder="Blog Caption"
            required="required"
         />
         <textarea
            name="innerHtml"
            id="innerHtml"
            placeholder="content"
            required="required"
         ></textarea>
         <input
            type="file"
            name="blogImg"
            id="blogImg"
            aria-placeholder="blogImg"
            required="required"
         />
         <span>Technlogy</span>
         <input type="radio" name="Category" id="Category" value="Technlogy" />
         <span>Eduction</span>
         <input type="radio" name="Category" id="Category" value="Eduction" />
         <span>Tips & Tricks</span>
         <input
            type="radio"
            name="Category"
            id="Category"
            value="Tips & Tricks"
         />

         <button type="submit">Create</button>
      </form>
      <script>
         let textAreaSnipt = document.querySelector("textarea");
         textAreaSnipt.textContent = `          <h1> heading </h1>   
         
         <p> caption text </p>
                           
         <h2> sub-heading here </h2>
         
         <img src="" alt="" >
         
         <ol>
            <li> steps here </li>
            <li> steps here </li>
            <li> steps here </li>   
         </ol>`;
         document.querySelector(".imgImport").addEventListener("click", () => {
            textAreaSnipt.textContent += `  <img src="" alt="" >     `;
         });
         document.querySelector(".h2Import").addEventListener("click", () => {
            textAreaSnipt.textContent += `  <h2>     </h2>     `;
         });
         document.querySelector(".pImport").addEventListener("click", () => {
            textAreaSnipt.textContent += `  <p>     </p>     `;
         });
      </script>
   </body>
</html>
