<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <title>Mashal Web Admin Dashboard</title>
      <link
         href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700"
         rel="stylesheet"
         type="text/css"
      />

      <link href="/css/bootstrap.min.css" rel="stylesheet" />
      <link href="/css/templatemo-style.css" rel="stylesheet" />
   </head>
   <body>
      <!-- Main content -->
      <div class="templatemo-content col-md-12 light-gray-bg">
         <div class="templatemo-top-nav-container">
            <div class="row">
               <nav class="templatemo-top-nav col-lg-12 col-md-12">
                  <ul class="text-uppercase">
                     <li><a href="" class="active">Admin panel</a></li>
                     <li><a href="">Dashboard</a></li>
                     <li><a href="">Users</a></li>
                     <li><a href="login.html">Comments</a></li>
                  </ul>
               </nav>
            </div>
         </div>
         <div class="templatemo-content-container">
            
               <h1 style="display: block; width: 100%; padding-bottom: 20px;">(<%= comments.length %>) Comments</h1>
               <% comments.reverse().forEach(comment => { %>
               <div class="templatemo-content-widget white-bg margin-bottom-10">
                  <i class="fa fa-times"></i>
                  <h2 class=" margin-bottom-10">
                     <%= comment.commentBy.username %>
                     <font
                        style="
                           font-size: 13px;
                           text-transform: none;
                           display: block;
                        "
                        ><%= comment.commentBy.email %></font
                     >
                  </h2>
                  <p class="margin-bottom-0"><%= comment.commentText %></p>
               </div>
               <% }) %>
            </div>
         </div>
            <div class="templatemo-content-widget no-padding">
               <div class="panel panel-default table-responsive">
                  <table
                     class="table table-striped table-bordered templatemo-user-table"
                  >
                     <thead>
                        <tr>
                           <td>
                              <a href="" class="white-text templatemo-sort-by"
                                 ># <span class="caret"></span
                              ></a>
                           </td>
                           <td>
                              <a href="" class="white-text templatemo-sort-by"
                                 >User Name <span class="caret"></span
                              ></a>
                           </td>
                           <td>
                              <a href="" class="white-text templatemo-sort-by"
                                 >Email <span class="caret"></span
                              ></a>
                           </td>
                           <td>Delete</td>
                        </tr>
                     </thead>
                     <tbody>
                        <% users.forEach((user,index) => { %>
                        <tr>
                           <td><%= index+1 %></td>
                           <td><%= user.username %></td>
                           <td><%= user.email %></td>
                           <td>
                              <a href="" class="templatemo-link"
                                 ><%= user._id %></a
                              >
                           </td>
                        </tr>
                        <% }) %>
                     </tbody>
                  </table>
               </div>
            </div>
            <!-- Second row ends -->
            <div class="templatemo-flex-row flex-content-row">
               <div class="templatemo-content-widget white-bg col-2">
                  <i class="fa fa-times"></i>
                  <div class="media margin-bottom-30"></div>
                  <div class="table-responsive">
                     <table class="table">
                        <tbody>
                           <tr>
                              <td><div class="circle green-bg"></div></td>
                              <td>Total Comments</td>
                              <td><%= comments.length %></td>
                           </tr>
                           <tr>
                              <td><div class="circle pink-bg"></div></td>
                              <td>total users</td>
                              <td><%= users.length %></td>
                           </tr>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
            <a href="/admain/logout">
               <button
                  style="
                     width: 30%;
                     margin-top: 30px;
                     padding: 10px 0;
                     font-size: 20px;
                     background: linear-gradient(45deg, #009688, #003f39);
                     color: #fff;
                     border: none;
                     outline: none;
                  "
               >
                  Logout
               </button>
            </a>
            <footer class="text-right">
               <p>Copyright &copy; 2024 Mashal Web | Mashal Huara</p>
            </footer>
         </div>
      </div>

      <!-- JS -->
   </body>
</html>
